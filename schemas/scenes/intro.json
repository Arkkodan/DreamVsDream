{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Intro Scene object",
    "description": "Extends Scene base class",
    "type": "object",
    "allOf": [
        {
            "$ref": "./scenes.json#/definitions/SceneBase"
        }
    ],
    "properties": {
        "sfx": {
            "type": "string"
        },
        "instructions": {
            "type": "string"
        },
        "disclaimer": {
            "type": "object",
            "properties": {
                "en": {
                    "type": "string"
                },
                "ja": {
                    "type": "string"
                }
            },
            "required": [
                "en",
                "ja"
            ]
        },
        "shader_error": {
            "type": "string"
        }
    }
}
