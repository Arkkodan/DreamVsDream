{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for fighter's voices.json",
    "type": "array",
    "items" : {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "percent": {
                "type": "integer",
                "minimum": 0,
                "maximum": 100
            },
            "sounds": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "name",
            "percent",
            "sounds"
        ]
    }
}
