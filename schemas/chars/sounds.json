{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for fighter's sounds.json",
    "type": "array",
    "items" : {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "sounds": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "name",
            "sounds"
        ]
    }
}
